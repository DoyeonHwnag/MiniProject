{{>layouts/header}}

<div class="container mt-5">
    <h2>공지사항</h2>

    {{#errorMessage}}
        <div class="alert alert-danger" role="alert">
            {{errorMessage}}
        </div>
    {{/errorMessage}}

    <div class="mb-3 text-end">
        {{#user}}
            {{#role}}
                {{#isAdmin}}
                    <a href="/notices/add" class="btn btn-primary">공지 추가</a>
                {{/isAdmin}}
            {{/role}}
        {{/user}}
    </div>

    <table class="table table-bordered">
        <thead>
        <tr>
            <th>번호</th>
            <th>제목</th>
            <th>작성일</th>
        </tr>
        </thead>
        <tbody>
        {{#notices}}
            <tr>
                <td>{{id}}</td>
                <td><a href="/notices/{{id}}">{{title}}</a></td>
                <td>{{createdAt}}</td>
            </tr>
        {{/notices}}
        {{^notices}}
            <tr>
                <td colspan="3" class="text-center">등록된 공지사항이 없습니다.</td>
            </tr>
        {{/notices}}
        </tbody>
    </table>
</div>

{{>layouts/footer}}
