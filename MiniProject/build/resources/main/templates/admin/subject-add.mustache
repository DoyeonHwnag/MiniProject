{{>layouts/header}}
<body class="container mt-5">
<h1>과목 추가</h1>

<form action="/admin/subjects/add" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label>과목 코드</label>
        <input type="text" name="subjectCode" class="form-control" required>
    </div>
    <div class="mb-3">
        <label>과목명</label>
        <input type="text" name="subjectName" class="form-control" required>
    </div>
    <div class="mb-3">
        <label>교수명</label>
        <input type="text" name="professorName" class="form-control">
    </div>
    <div class="mb-3">
        <label>학년</label>
        <input type="text" name="grade" class="form-control">
    </div>
    <div class="mb-3">
        <label>학점</label>
        <input type="number" name="credit" class="form-control">
    </div>
    <div class="mb-3">
        <label>정원</label>
        <input type="number" name="capacity" class="form-control">
    </div>
    <div class="mb-3">
        <label>요일</label>
        <select name="dayOfWeek" class="form-control" required>
            <option value="">선택하세요</option>
            <option value="월">월</option>
            <option value="화">화</option>
            <option value="수">수</option>
            <option value="목">목</option>
            <option value="금">금</option>
        </select>
    </div>
    <div class="mb-3">
        <label>시작 시간</label>
        <input type="number" name="startTime" class="form-control" required>
    </div>
    <div class="mb-3">
        <label>종료 시간</label>
        <input type="number" name="endTime" class="form-control" required>
    </div>
    <div class="mb-3">
        <label>학기</label>
        <input type="text" name="semester" class="form-control" placeholder="예) 2025-1">
    </div>

    <div class="mb-3">
        <label>강의계획서 파일 첨부</label>
        <input type="file" name="file" class="form-control">
    </div>

    <button type="submit" class="btn btn-success">등록</button>
    <a href="/admin/subjects" class="btn btn-secondary">취소</a>
</form>
{{>layouts/footer}}
