{{>layouts/header}}
<body class="container mt-5">
<h1>과목 수정</h1>

<form action="/admin/subjects/edit" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label>과목 코드</label>
        <input type="text" name="subjectCode" class="form-control" value="{{subject.subjectCode}}">
    </div>
    <div class="mb-3">
        <label>과목명</label>
        <input type="text" name="subjectName" class="form-control" value="{{subject.subjectName}}">
    </div>
    <div class="mb-3">
        <label>교수명</label>
        <input type="text" name="professorName" class="form-control" value="{{subject.professorName}}">
    </div>
    <div class="mb-3">
        <label>학년</label>
        <input type="text" name="grade" class="form-control" value="{{subject.grade}}">
    </div>
    <div class="mb-3">
        <label>학점</label>
        <input type="number" name="credit" class="form-control" value="{{subject.credit}}">
    </div>
    <div class="mb-3">
        <label>정원</label>
        <input type="number" name="capacity" class="form-control" value="{{subject.capacity}}">
    </div>
    <div class="mb-3">
        <label>요일</label>
        <select name="dayOfWeek" class="form-control" required>
            <option value="월" {{#subject.dayIsMon}}selected{{/subject.dayIsMon}}>월</option>
            <option value="화" {{#subject.dayIsTue}}selected{{/subject.dayIsTue}}>화</option>
            <option value="수" {{#subject.dayIsWed}}selected{{/subject.dayIsWed}}>수</option>
            <option value="목" {{#subject.dayIsThu}}selected{{/subject.dayIsThu}}>목</option>
            <option value="금" {{#subject.dayIsFri}}selected{{/subject.dayIsFri}}>금</option>
        </select>
    </div>
    <div class="mb-3">
        <label>시작 시간</label>
        <input type="number" name="startTime" class="form-control" value="{{subject.startTime}}">
    </div>
    <div class="mb-3">
        <label>종료 시간</label>
        <input type="number" name="endTime" class="form-control" value="{{subject.endTime}}">
    </div>
    <div class="mb-3">
        <label>학기</label>
        <input type="text" name="semester" class="form-control" value="{{subject.semester}}">
    </div>

    <div class="mb-3">
        <label>강의계획서 파일 첨부</label>
        <input type="file" name="file" class="form-control">
    </div>

    <button type="submit" class="btn btn-success">수정 완료</button>
    <a href="/admin/subjects" class="btn btn-secondary">취소</a>
</form>

{{>layouts/footer}}

